<%- include("partials/head.ejs") %> <%- include("partials/header.ejs") %>
        <form method="POST" action="<%= game ? `/games/update/${game._id}` : '/game' %>">
            <input type="hidden" name="_csrf" value="<%= _csrf %>">
            <div>
                <label for="title">Title: </label>
                <input type="text" id="title" name="title" value="<%= game ? game.title : '' %>">
            </div>
            <div>
                <label for="location">Location: </label>
                <input type="text" name="location" id="location" value="<%= game ? game.location : '' %>">
            </div>
            </div>
            <div>
                <label for="status">Status: </label>
                <select name="status" id="status">
                    <option value="Waiting for players">Waiting for players</option>
                    <option value="Game is about to begin">Game is about to begin</option>
                    <option value="Game started">Game started</option>
                    <option value="Game is about to end">Game is about to end"</option>
                    <option value="Game has finished">Game has finished</option>
                </select>
            </div>
            <div>
                <button type="submit">
                    <%= game ? 'Update' : 'Create' %>
                </button>
                <a href="/games"> <button type="button">Cancel</button> </a>
            </div>
        </form> <%- include("partials/footer.ejs") %>